<h1>Search Users</h1>
{{#if error}} <span class="text-danger">{{ message }}</span>{{/if}}
<form action="/user/search" class="form-inline" method="POST">
  <div class="form-group">
    <input type="text" name="id" id="id" placeholder="Search Users by ID" class="form-control">
  </div>
  <input type="submit" value="Search" class="btn btn-primary">
</form>